{
  "name": "@bookmemory/contracts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "dist",
    "openapi"
  ],
  "scripts": {
    "build": "tsc -b",
    "lint": "eslint .",
    "typecheck": "tsc -b --pretty false --noEmit",
    "contracts:generate": "openapi-typescript ./openapi/bookmemory.openapi.json -o ./src/openapi.ts",
    "contracts:sync": "node ./scripts/sync-openapi.mjs",
    "contracts:refresh": "pnpm contracts:sync && pnpm contracts:generate"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.46.4"
  }
}
