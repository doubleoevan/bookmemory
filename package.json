{
  "name": "bookmemory",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write .",
    "clean": "pnpm -r clean",
    "dev:api": "pnpm -C apps/api dev",
    "dev:web": "pnpm -C apps/web dev",
    "dev:db": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d db",
    "contracts:sync": "pnpm -C packages/contracts contracts:sync",
    "component:add": "pnpm -C packages/ui component:add",
    "prepare": "husky"
  },
  "devDependencies": {
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1"
  }
}
