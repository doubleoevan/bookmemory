{
  "name": "bookmemory",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "dev:mock": "pnpm -C apps/web dev:mock",
    "dev:api": "make -C apps/api run",
    "dev:full": "concurrently -n api,js -c auto \"pnpm dev:api\" \"pnpm -r --parallel dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write .",
    "clean": "pnpm -r clean",
    "dev:db": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d db",
    "db:migrate": "cd apps/api && alembic revision --autogenerate -m",
    "db:upgrade": "cd apps/api && alembic upgrade head",
    "db:downgrade": "cd apps/api && alembic downgrade -1",
    "contracts:sync": "pnpm -C packages/contracts contracts:sync",
    "component:add": "pnpm -C packages/ui component:add",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1"
  }
}
